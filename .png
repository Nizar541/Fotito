import matplotlib.pyplot as plt

# Crear imagen
fig, ax = plt.subplots(figsize=(6, 4))
ax.axis('off')

# Datos a mostrar
text = (
    "Resumen de Gastos\n\n"
    f"Monto que hemos dado: 973 dirham\n"
    f"Gastos totales: 3015 dirham\n"
    f"Cantidad sobrante: 543 dirham"
)

# Mostrar texto centrado
ax.text(0.5, 0.5, text, ha='center', va='center', fontsize=14, wrap=True)

# Guardar imagen
img_path = "/mnt/data/resumen_gastos.png"
plt.savefig(img_path, bbox_inches='tight', dpi=200)
plt.close(fig)

